<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAmount"
        style="@style/transactionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ATM Amount"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvHundred"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="@id/tvAmount"
        android:id="@+id/tvHundred"
        style="@style/transactionTitle"
        android:text="Rs 100"
        app:layout_constraintRight_toLeftOf="@id/tvTwoHundred"
        app:layout_constraintLeft_toRightOf="@id/tvAmount"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="@id/tvAmount"
        android:id="@+id/tvTwoHundred"
        style="@style/transactionTitle"
        android:text="Rs 200"
        app:layout_constraintRight_toLeftOf="@id/tvFiveHundred"
        app:layout_constraintLeft_toRightOf="@id/tvHundred"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="@id/tvAmount"
        android:id="@+id/tvFiveHundred"
        style="@style/transactionTitle"
        android:text="Rs 500"
        app:layout_constraintRight_toLeftOf="@id/tvTwoThousand"
        app:layout_constraintLeft_toRightOf="@id/tvTwoHundred"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="@id/tvAmount"
        android:id="@+id/tvTwoThousand"
        style="@style/transactionTitle"
        android:text="Rs 2000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvFiveHundred"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>